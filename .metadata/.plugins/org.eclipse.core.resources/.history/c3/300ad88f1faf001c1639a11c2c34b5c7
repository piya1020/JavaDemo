package com.teksystems.myproject;

public class DemoMethods {
	public static void main(String[] args) {
		
		calculatescoreJohn();
		calculatescoresneha();
		calculatescoreaishi()
		
	}
	public static void calculatescoreJohn()
	{
		String Playernm="John";
		int score=800;
		int levelcompleted=5;
		int bonus=100;
		boolean gameOver=true;
		
		if(gameOver)
		{
			int finalScore=score+(levelcompleted*bonus);
			System.out.println("Player Name="+ Playernm +"Final Score"+finalScore);
		}
	}
	public static void calculatescoresneha()

	{
		String Playernm="sneha";
		int score=600;
		int levelcompleted=3;
		int bonus=200;
		boolean gameOver=true;
		
		if(gameOver)
		{
			int finalScore=score+(levelcompleted*bonus);
			System.out.println("Player Name="+ Playernm +"Final Score"+finalScore);
		}
	}
	public static void calculatescoreaishi()

	{
		String Playernm="aishi";
		int score=900;
		int levelcompleted=4;
		int bonus=50;
		boolean gameOver=true;
		
		if(gameOver)
		{
			int finalScore=score+(levelcompleted*bonus);
			System.out.println("Player Name="+ Playernm +"Final Score"+finalScore);
		}
	}
	

}
